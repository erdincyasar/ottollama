{
    "name": "local-ollama-extension",
    "displayName": "Local Ollama Extension",
    "description": "A VS Code extension for interacting with Ollama",
    "version": "0.0.1",
    "publisher": "ottollama",
    "engines": {
        "vscode": "^1.96.0"
    },
    "categories": [
        "Other"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "ottollama.start",
                "title": "ottollama"
            },
            {
                "command": "ottollama.newChat",
                "title": "ottollama New Chat"
            },
            {
                "command": "ottollama.switchChat",
                "title": "ottollama Switch Chat"
            },
            {
                "command": "deleteChat",
                "title": "ottollama Delete Chat"
            }
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/yourusername/local-ollama-extension.git"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc --noEmit",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint --config eslint.config.mjs src/extension.ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/axios": "^0.14.4",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^8.2.2",
        "@types/node": "^14.14.37",
        "@types/sinon": "^10.0.0",
        "@types/vscode": "^1.96.0",
        "@typescript-eslint/eslint-plugin": "^8.20.0",
        "@typescript-eslint/parser": "^8.20.0",
        "eslint": "^9.18.0",
        "mocha": "^11.0.1",
        "sinon": "^15.0.0",
        "tslint": "^6.1.3",
        "typescript": "^4.2.3",
        "vscode-test": "^1.4.0"
    },
    "dependencies": {
        "@vscode/test-cli": "^0.0.10",
        "axios": "^1.7.9",
        "glob": "^11.0.1"
    }
}
